@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Review;

<h1>Add a new review</h1>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Critic)
    @Html.TextBoxFor(model => model.Critic)

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.Rating)
    @Html.TextBoxFor(model => model.Rating, new { @type="number"})

    <input type="submit" value="Add new review" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show all reviews", "Index")</p>