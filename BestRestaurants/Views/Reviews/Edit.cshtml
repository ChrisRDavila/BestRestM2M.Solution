@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Review

<h1>Edit review</h1>

<h4>Edit this review: @Html.DisplayFor(model =>model.Critic)</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Critic)
    @Html.TextBoxFor(model => model.Critic)

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.Rating)
    @Html.TextBoxFor(model => model.Rating, new { @type="number"})

    <input type="submit" value="Save" class="btn btn-primary" />
}

<p>@Html.ActionLink("Back to reviews list", "Index")</p>